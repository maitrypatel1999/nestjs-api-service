{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "plugins": [{
      "name": "@nestjs/swagger",
      "options": {
        "classValidatorShim": true
      }
    }],
    "assets": [{ "include": "../public/**/*", "outDir": "dist/public" }],
    "deleteOutDir": true
  }
}
